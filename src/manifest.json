{
  "manifest_version": 2,
  "name": "Unhook Website Blocker",
  "description": "Unhook helps you get your social media addiction under control.",
  "version": "1.0.0",
  "icons": {
    "16": "icon16.png",
    "24": "icon24.png",
    "32": "icon32.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": ["onDocumentStart.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["octopus.svg", "logo.svg", "blockPage.html"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "applications": {
    "gecko": {
      "id": "filip.defar@gmail.com"
    }
  }
}
